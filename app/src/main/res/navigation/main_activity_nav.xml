<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/homepageFragment"
        android:name="com.selin.fooddeliveryapp.ui.home.HomePageFragment"
        android:label="fragment_homepage"
        tools:layout="@layout/fragment_homepage" >
        <action
            android:id="@+id/transitationDetail"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/transitationCart"
            app:destination="@id/cartFragment" />
        <action
            android:id="@+id/transitationMap"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.selin.fooddeliveryapp.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/detailFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.selin.fooddeliveryapp.ui.cart.CartFragment"
        android:label="CartFragment" >
        <action
            android:id="@+id/transitationEnd"
            app:destination="@id/endFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.selin.fooddeliveryapp.ui.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/transitationHome"
            app:destination="@id/homepageFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.selin.fooddeliveryapp.ui.fragment.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/mapFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/endFragment"
        android:name="com.selin.fooddeliveryapp.ui.fragment.EndFragment"
        android:label="fragment_end"
        tools:layout="@layout/fragment_end" />
</navigation>